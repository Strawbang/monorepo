{
  "name": "@strawbang/api",
  "version": "0.1.0",
  "description": "",
  "main": "dist/app.js",
  "jest": {
    "setupFiles": [
      "<rootDir>config.ts"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/test/.*|\\.(spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "compiler": "ttypescript"
      }
    }
  },
  "scripts": {
    "start": "tsc && node dist/src/app.js",
    "dev": "nodemon src/infrastructure/Server.ts",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watchAll",
    "test:clearcache": "jest --clearCache",
    "format": "prettier --config .prettierrc \"src/**/*.ts\" --write",
    "cucumber": "./node_modules/.bin/cucumber.js ./features -r ./features/steps"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^7.3.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.6",
    "@types/koa-router": "^7.4.4",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "chai": "^4.3.6",
    "eslint": "^8.11.0",
    "jest": "^27.5.1",
    "prettier": "^2.6.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "express": "^4.17.3",
    "http-status-codes": "^2.2.0",
    "jest-ts-auto-mock": "^2.1.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-multer": "^1.0.2",
    "koa-router": "^10.1.1",
    "nodemon": "^2.0.15",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0",
    "ts-auto-mock": "^3.5.0",
    "ts-patch": "^2.0.1",
    "tsyringe": "^4.6.0",
    "ttypescript": "^1.5.13",
    "typedi": "^0.10.0"
  }
}
